{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": [
        "packages/*/src"
      ]
    },
    "outDir": "dist"
  },
  "include": [
    "packages/**/*",
    "apps/**/*",
    "backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}